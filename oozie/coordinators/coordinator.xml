<coordinator-app name="sqoop_workflow" frequency="${freq}" start="${startTime}" end="${endTime}" timezone="UTC" xmlns="uri:oozie:coordinator:0.4" xmlns:sla="uri:oozie:sla:0.2">
	<action>
		<workflow>
			<app-path>${workflowPath}</app-path>
			<configuration>
				<property>
					<name>jobTracker</name>
					<value>${jobTracker}</value>
				</property>
				<property>
					<name>nameNode</name>
					<value>${nameNode}</value>
				</property>
				<property>
					<name>queueName</name>
					<value>${queueName}</value>
				</property>
				<property>
					<name>oozie.use.system.libpath</name>
					<value>true</value>
				</property>
				<property>
					<name>oozie.libpath</name>
					<value>${libpath}</value>
				</property>
			</configuration>
		</workflow>
		<sla:info>
			<sla:nominal-time>${coord:nominalTime()}</sla:nominal-time>
			<sla:should-end>${1 * MINUTES}</sla:should-end>
			<sla:max-duration>${5 * MINUTES}</sla:max-duration>
			<sla:alert-events>end_miss,duration_miss</sla:alert-events>
			<sla:alert-contact>${alertEmail}</sla:alert-contact>
		</sla:info>
	</action>
</coordinator-app>
